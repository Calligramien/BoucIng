<div class="goat-header">
  <h2><%= @goat_ad.name %></h2>
  <p>5,0 (25 reviews) ⠂ SuperGoat ⠂ <%= @goat_ad.address %></p><br/>
</div>

<div class="gallery">

  <figure class="gallery__item gallery__item--1">
    <% @goat_ad.medias.each do |media| %>
    <%= cl_image_tag media.key, height: 490, width: 400, crop: :fill%>
    <% end %>
  </figure>

</div>

<div class="goat-board">
  <div style="width: 70%; float:left">
    <h3>Single goat. Owner:</h3>
    <p><%= @goat_ad.age %> years old - <%= @goat_ad.features %></p>
    <hr class="solid">

    <div class="goat-description">
      <h3>Description</h3><%= @goat_ad.description %>

      <br/>

        <%=link_to"index", goat_ads_path %>
    </div>
  </div>

  <div style="width: 30%; float:right">
    <div class="booking-card" style="width: 22rem;">
      <div class="card-img-top"> </div>
        <div class="card-body">
          <h5 class="booking-card-price"><%= @goat_ad.price_per_day %>€ /day</h5>
          <a href="#" class="btn btn-dark btn-block">Book now </a>
        </div>
      </div>
    </div>
  </div>

